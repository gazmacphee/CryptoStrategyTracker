# Database configuration
PGHOST=db
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=crypto
DATABASE_URL=postgresql://postgres:postgres@db:5432/crypto

# Binance API credentials (optional but recommended for real data)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# OpenAI API key (required for news digest and sentiment analysis features)
OPENAI_API_KEY=your_openai_api_key

# Application settings
RESET_DB=true  # Set to true to reset database on startup
BACKFILL_ON_START=true  # Set to true to start data backfill on startup